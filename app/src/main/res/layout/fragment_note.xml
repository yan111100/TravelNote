<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/blog_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color" />

    <Button
        android:id="@+id/new_blog"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="24.5dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/new_blog_background"
        android:text="@string/new_note"
        android:textColor="@color/load_logo"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/blog_list_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_blog" >

        <com.cuz.travelnote.view.NoScrollGridView
            android:id="@+id/fragment_blog_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@color/white"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/blog_null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:text="@string/blog_null"
        android:textColor="@color/see_detail"
        android:textSize="14sp"
        android:paddingTop="100dp"/>

</RelativeLayout>