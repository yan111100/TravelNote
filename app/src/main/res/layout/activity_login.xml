<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/setting_header"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/change_info_back"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:clickable="true"
            android:src="@drawable/topbar_back_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/login"
            android:textColor="@color/tab_text_color"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:alpha="0.5"
        android:background="@color/setting_header_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="41dp"
        android:layout_marginRight="41dp"
        android:layout_marginTop="100dp"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/username_tx"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="请输入用户名"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textColorHint="@color/content_color"/>

        <EditText
            android:id="@+id/password_tx"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="请输入密码"
            android:imeOptions="actionSend"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textColorHint="@color/content_color"/>
    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="41dp"
        android:layout_marginRight="41dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/new_blog_background"
        android:textColor="@color/load_logo"
        android:textSize="18sp"
        android:text="登陆" />

    <TextView
        android:id="@+id/register_tx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="8dp"
        android:text="没有账号，去注册"
        android:textSize="18sp"
        android:textColor="@color/black"/>
</LinearLayout>